<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.community.mapper.UserMapper">
    <sql id="UserFields">
        id,username,password,salt,email,type,status,activation_code,header_url,create_time
    </sql>
    <resultMap id="userResutlMap" type="user">
        <id property="id" column="id"></id>
        <result column="activation_code" property="activationCode"></result>
        <result column="header_url" property="headerUrl"></result>
        <result column="create_time" property="createTime"></result>

    </resultMap>
    <select id="selectUsers" resultMap="userResutlMap">
        select <include refid="UserFields"></include>
            from user;
    </select>

    <select id="selectById" resultMap="userResutlMap">
        select <include refid="UserFields"></include>
            from user where id = #{id};
    </select>

    <select id="selectByName" resultMap="userResutlMap">
        select <include refid="UserFields"></include>
            from user where username = #{name};
    </select>

    <select id="selectByEmail" resultMap="userResutlMap">
        select <include refid="UserFields"></include>
            from user where email = #{email};
    </select>

    <update id="updateHeader">
        update user set header_url = #{headerUrl} where id = #{id};
    </update>

    <update id="updateStatus" >
        update user set status = #{status} where id = #{status};
    </update>

    <update id="updatePassword">
        update user set password = #{password} where id = #{id};
    </update>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert into user(<include refid="UserFields"></include>)
            values(#{id},#{username},#{password},#{salt},#{email},#{type},#{status},#{activationCode},#{headerUrl},#{createTime})
    </insert>
</mapper>


















